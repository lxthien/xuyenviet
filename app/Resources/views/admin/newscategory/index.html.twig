{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_category_index' %}

{% block main %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-3">
                    <div class="card add">
                        <div class="card-body">
                            <div class="stat-widget-one">
                                <a href="{{ path('admin_newscategory_new') }}">
                                    <div class="stat-icon dib">
                                        <i class="ti-plus text-success border-success"></i>
                                    </div>
                                    <div class="stat-content dib">
                                        <div class="stat-text text-success">{{ 'menu.add_new'|trans }}</div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">{{ 'title.categories'|trans }}</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>{{ 'label.name'|trans }}</th>
                                        <th>{{ 'label.parentcat'|trans }}</th>
                                        <th>{{ 'label.url'|trans }}</th>
                                        <th>{{ 'label.published_at'|trans }}</th>
                                        <th>{{ 'label.actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in objects %}
                                    <tr>
                                        <td><a class="btn-link" href="{{ path('admin_newscategory_edit', {id: row.id}) }}">{{ row.getName() }}<a></td>
                                        <td>{{ row.getParentcat() }}</td>
                                        <td>{{ row.getUrl() }}</td>
                                        <td>{{ row.getCreatedAt() | localizeddate('medium', 'none', null, 'Asia/Ho_Chi_Minh', 'd/M/YYYY') }}</td>
                                        <td>
                                            <div class="item-actions">
                                                <a href="{{ path('admin_newscategory_edit', {id: row.id}) }}" class="btn-sm btn-edit">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>

                                                {{ include('admin/newscategory/_delete_form.html.twig', {category: row}, with_context = false) }}
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- .animated -->
    </div>
{% endblock %}
