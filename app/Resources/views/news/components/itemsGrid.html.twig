<div class="col-xs-12 col-sm-4 col-md-3 news-item">
    <div class="news-item-wrapper">
        <a class="media-thumb" title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl() }) }}">
            <img class="mr-3 img-thumbnail" src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_382_285') }}" alt="{{row.getTitle()}}">
        </a>
        <div class="media-body">
            <h5 class="mt-0 mb-1">
                <a title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                    <span>{{ row.getTitle() }}</span>
                </a>
            </h5>
            <p>{{ row.getDescription()|slice(0, 85) }}</p>
        </div>
    </div>
</div>